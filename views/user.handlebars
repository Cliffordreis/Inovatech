            <div class="m-2 row">
                <label class="">Nome:</label>
                <div class="col">
                    <input type="text" name="nome" class="form-control" placeholder="{{user.nome}}" maxlength="20" minlength="2" disabled>
                </div>
                <div class="col">
                    <input type="text" name="sobrenome" class="form-control" placeholder="{{user.sobrenome}}" maxlength="20" minlength="2" disabled>
                </div>
            </div>
            <div class="text-left m-3">
                <label>email:</label>
                <input name="email" type="email" placeholder="{{user.email}}" class="form-control" maxlength="50" disabled>
            </div>

            <!-- Botão para abrir o modal -->
            <button type="button" class="btn btn-danger m-3" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                Excluir Conta
            </button>

            <!-- Modal -->
            <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true" data-bs-backdrop="false" data-bs-keyboard="false">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Exclusão</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Tem certeza que deseja excluir sua conta?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <!-- Formulário para exclusão da conta -->
                            <form action="/delete/{{user.nick}}" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Excluir Conta</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


            
        </div>  
</div>

