<div class="container-fluid d-flex justify-content-center my-2" data-bs-theme="dark">
    <div id="cad" class="card col-12 col-sm-8 col-md-8 col-lg-6 p-3 text-center">
        <h3 class="m-2">{{Vnick}}, finalize sua compra</h3>
        <hr>

        <div class="qty mt-3 mb-3">
            <div id="item" class="d-flex flex-column align-items-center gap-3">
                {{#each carrinho}}
                <div class="d-flex justify-content-center align-items-center gap-4">
                    <img src="/images/{{this.id}}.png" width="80" height="78">

                    <div class="text-center">
                        <h4 class="mb-1">{{this.name}}</h4>
                        <p class="mb-1">{{this.specs}} R$: {{this.valor}}</p>
                    </div>

                    <form method="post" class="d-flex align-items-center gap-2">
                        <button formaction="/diminuir/{{this.id}}" formmethod="post" class="minus bg-dark">-</button>
                        <input type="number" class="count text-white text-center" name="qty" value="{{quantidade}}" readonly style="width: 50px;">
                        <button formaction="/aumentar/{{this.id}}" formmethod="post" class="plus bg-dark">+</button>
                    </form>
                </div>
                {{/each}}
            </div>
        </div>

        <hr>
        <h3>Endereço</h3>

        <form class="row g-3">
            <div class="col-12">
                <label for="inputAddress" class="form-label">Endereço</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="Digite o nome da sua rua" required>
            </div>

            <div class="col-md-2">
                <label for="inputZip" class="form-label">Número</label>
                <input type="text" class="form-control" id="inputZip" required>
            </div>

            <div class="col-md-4">
                <label for="estado" class="form-label">Estado</label>
                <select id="estado" class="form-select" onchange="carregarCidades()" required>
                    <option >Escolha um estado</option required>
                </select>
            </div>

            <div class="col-md-4">
                <label for="cidade" class="form-label">Cidade</label>
                <select id="cidade" class="form-select" disabled required>
                    <option>Escolha uma cidade</option required>
                </select>
            </div>

            <div class="col-md-2">
                <label for="inputZip" class="form-label">CEP</label>
                <input type="text" class="form-control" id="inputZip" required>
            </div>
        

            <hr>
            <h3 class="">
                Forma de pagamento
            </h3>
            <ul class="list-group">
                <li class="list-group-item d-flex flex-column flex-sm-row justify-content-center" aria-required="true">
                    <span class="m-2">
                        <input class="form-check-input" type="radio" name="listGroupRadio" value="" id="firstRadio">
                        <label class="form-check-label" for="firstRadio">Pix</label>
                    </span>

                    <span class="m-2">
                        <input class="form-check-input" type="radio" name="listGroupRadio" value="" id="secondRadio">
                        <label class="form-check-label" for="secondRadio">Cartão de crédito</label>
                    </span>

                    <span class="m-2">
                        <input class="form-check-input" type="radio" name="listGroupRadio" value="" id="thirdRadio">
                        <label class="form-check-label" for="thirdRadio">Boleto</label>
                    </span>
                </li>
            </ul>


            <div class="m-3">
                <h5 id="subtotal">Subtotal R$: {{formatCurrency totalv}}</h5>
                <h5 id="frete" hidden>Frete R$: 15,00</h5>
                <h3 id="total">Total R$: {{formatCurrency totalv}}</h3>

                <button class="btn btn-transparent m-2">
                    Finalizar compra
                </button>
            </div>
        </form>    
    </div>
</div>
